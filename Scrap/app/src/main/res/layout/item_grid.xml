<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="347dp"
    android:layout_height="209dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="347dp"
        android:layout_height="192dp"
        android:background="@drawable/background_scrap">

        <ImageView
            android:id="@+id/itemImg"
            android:layout_width="347dp"
            android:layout_height="131dp"
            android:padding="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/test_j2kb" />

        <View
            android:id="@+id/divider3"
            android:layout_width="338dp"
            android:layout_height="1dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="60dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="200dp"
            android:layout_height="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/font"
            android:text="인텔리제이 디버깅 해보기"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider3" />

        <TextView
            android:id="@+id/itemDomain"
            android:layout_width="wrap_content"
            android:layout_height="7dp"
            android:layout_marginStart="11.87dp"
            android:layout_marginTop="38dp"
            android:fontFamily="@font/font"
            android:text="tistory.com"
            android:textColor="#979797"
            android:textSize="6sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider3" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="318dp"
            android:layout_marginTop="137dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/more_vert" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>