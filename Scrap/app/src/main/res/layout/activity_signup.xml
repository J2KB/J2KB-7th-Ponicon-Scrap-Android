<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="252dp"
        android:layout_height="425dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="148dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="41dp"
            android:layout_height="17dp"
            app:srcCompat="@drawable/name" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="9dp" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="252dp"
            android:layout_height="39dp"
            android:ems="10"
            android:hint="이름을 입력하세요"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:textColorHint="#979797"
            android:fontFamily="@font/font"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*이름을 입력하세요"
            android:textSize="13sp"
            android:fontFamily="@font/font"
            android:textColor="#FF5454"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="54dp"
            android:layout_height="17dp"
            app:srcCompat="@drawable/id" />

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="252dp"
            android:layout_height="39dp"
            android:ems="10"
            android:fontFamily="@font/font"
            android:hint="아이디를 입력하세요"
            android:inputType="textPersonName"
            android:textColorHint="#979797"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:text="*아이디를 입력하세요"
            android:textColor="#FF5454"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="67dp"
            android:layout_height="17dp"
            app:srcCompat="@drawable/pw" />

        <EditText
            android:id="@+id/editTextTextPersonName6"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:ems="10"
            android:fontFamily="@font/font"
            android:hint="비밀번호를 입력하세요"
            android:inputType="textPersonName"
            android:textColorHint="#979797"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:text="*비밀번호를 입력하세요"
            android:textColor="#FF5454"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="96dp"
            android:layout_height="17dp"
            app:srcCompat="@drawable/pw_chk" />

        <EditText
            android:id="@+id/editTextTextPersonName4"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:ems="10"
            android:fontFamily="@font/font"
            android:hint="비밀번호 확인을 입력하세요"
            android:inputType="textPersonName"
            android:textColorHint="#979797"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:text="*비밀번호 확인을 입력하세요"
            android:textColor="#FF5454"
            android:textSize="13sp" />

    </LinearLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="198dp"
        android:layout_height="43dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="627dp"
        android:background="@drawable/signup_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="107dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="39dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_signup" />
</androidx.constraintlayout.widget.ConstraintLayout>